{extends file="base/body.tpl"}{block name=jquery}    {literal}        $(function(){            $(".hotspot").tipTip({maxWidth: "200px", edgeOffset: 3, defaultPosition: "top", delay: 200, fadeOut: 400});            $('input[name="perm[]"]').click(function(){                if( $('input[name="perm[]"]:checked').length > 0){                    $("div#err").html("");                }else{                    $("div#err").html("At least one permission must be selected");                }            });        });        $("#selectAll").click(function(){            if($(this).is(":checked")){                $("input[name='perm[]']").each(function(){                    $(this).prop('checked', true);                });                $("div#err").html("");            }else{                $("input[name='perm[]']").each(function(){                    $(this).prop('checked', false);                });                $("div#err").html("At least one permission must be selected");                            }        });        $("#facilityTypeForm").submit(function(e){            if( $('input[name="perm[]"]:checked').length == 0){                e.preventDefault();                $("div#err").html("At least one permission must be selected");            }else{                $("div#err").html("");            }        });    {/literal}{/block}{block name=styles}    {literal}        .selectAll{            font-weight:bold;            font-size:14px;            font-variant:small-caps;            font-family:'Verdana';        }        .block{            margin-left: 25px;        }        .permBlock{            margin-left: 5px;        }        .block li{            padding: 0px;        }                li > label {            color: #777777 !important;        }    {/literal}{/block}{block name=content}{nocache}    {$msg}{if $facility->getFacilityType()->isAdmin()} <form data-abide name="facilityTypeForm" id="facilityTypeForm" action="{$actionPage}" method="POST">    <input type="hidden" name="id" value="{$facilityType->getId()}"/>    <fieldset style="width:98%;">        <legend>Manage Facility Type Permissions</legend>        <div align="right" style="height:5px;text-align:right;" id="err" class="error"></div>        <div class="row">            <div class="medium-3 columns">                <label class="viewLabel medium-text-right">Facility Type:</label>             </div>             <div class="medium-9 end columns">                <label class="infoLabel text-left">                    {if $facilityType->getId() != ''}                         {$facilityType->getName()}                         {if $facilityType->isEducational()}                          &nbsp;<span class="info-label">educational</span>                          {/if}                    {else}                         Choose Facility Type from list below                    {/if}                </label>            </div>        </div>        <div class="row">            <div class="small-12 columns">              <hr width="100%" size="2" color="#D0E0F0" style="margin:1px;"/>            </div>        </div>        <div>            {foreach from=$categories item=ctg}                {if $prm->getByCategoryId($ctg->getId())|count gt 0}                    <div class="row">                        <div class="small-12">                           <span class="permBlock">                               {Messages::i18n($ctg->getMessageResource())}                           </span>                        </div>                   </div>                   <ul class="large-block-grid-3 medium-block-grid-2 small-block-grid-1 block">                        {foreach from=$prm->getByCategoryId($ctg->getId()) item=perm}                            <li>                                <label>                                    <input type="checkbox" name="perm[]" value="{$perm->getId()}" {if $perm->getId()|in_array:$selectedPerms} checked="checked" {/if}/>                                    {Messages::i18n($perm->getPermTextKey())}                                    {if $perm->getComments() != ''}                                        <a href="#" class="hintanchorRow" onclick="return false;" onMouseover='showhint("{Messages::i18n($perm->getComments())}", this, event, "180px")'>&nbsp;</a>                                    {/if}                                </label>                             </li>                        {/foreach}                    </ul>                {/if}            {/foreach}                 <div class="row">            <div class="small-12 columns">              <hr width="100%" size="2" color="#D0E0F0"  style="margin:0px;"/>            </div>        </div>        <div class="row">            <div class="medium-3 end columns selectAll">                <label><input type="checkbox" id="selectAll"/><span class="selectAll">Select All</span></label>            </div>        </div>        <div class="row">            <div class="small-4  end columns">                 <a href="/facilitytype" class="reset">Reset</a>&nbsp;                 {ElementTag::submitBtn('')}            </div>        </div>      </div>    </fieldset></form>            {if $list|count gt 0}<div class="listTableCaption"> Recorded Facility Types </div>     <table align="left" id="listTable" class="displayTable" width="98%" cellspacing="0">     <thead>        <tr>            <th>Facility type</th>             <th>Is educational?</th>             <th width="5%">&nbsp;</th>        </tr>     </thead>     <tbody>       {foreach from=$list item=ft}             <tr>                                           <td>{$ft->getName()}</td>                 <td>{DbMapperUtility::booleanYesNo($ft->isEducational())}</td>                 <td>                    <a title="{Messages::i18n("link.edit")}" class="editRow" href="/facilitytype/edit/{$ft->getId()}">                        <i class='fas fa-edit' style='font-size:1.5rem;color:#008cba;'></i>                    </a>                </td>            </tr>        {/foreach}     </tbody></table> {else}  <div class="emptyListMessage">No facility types have been recorded.</div>{/if}{else}    <div class="emptyListMessage">This functionality is ONLY available at an administrative facility.</div>{/if}{/nocache}{/block}    